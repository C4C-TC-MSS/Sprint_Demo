@page "/quiz"


@foreach (var question in Questions)
{
    <section class="question" id="question-@question.Number">
        <h1 class="page-title">@question.Ask</h1>

        <section class="quiz-anwser-container">
            <a class="button button-quiz"
               onclick="document.getElementById('question-@(question.Number+1)').scrollIntoView({behavior:'smooth'})">
                <i class="far fa-info-circle" title="Hello world!"></i>
                @question.AnswerA
            </a>
            <a class="button button-quiz"
               onclick="document.getElementById('question-@(question.Number+1)').scrollIntoView({behavior:'smooth'})">
                <i class="far fa-info-circle"></i>
                @question.AnswerB
            </a>
        </section>
    </section>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
}

<nav class="page-actions">
    <a class="button" href="info">Back</a>
    <a class="button" href="certificate">View Certifications</a>
</nav>

@code {
    private class Question
    {
        public int Number { get; set; }
        public string Ask { get; set; }
        public string AnswerA { get; set; }
        public string AnswerB { get; set; }

        public Question()
        {

        }
    }

    private List<Question> Questions = new List<Question>() {
        new Question()
        {
            Number = 1,
            Ask = "Do you want to...",
            AnswerA = "Apply for a new certificate",
            AnswerB = "Renew an existing certificate",
        },
        new Question()
        {
            Number = 2,
            Ask = "Will you be working...",
            AnswerA = "Domestic",
            AnswerB = "International",
        },
        new Question()
        {
            Number = 3,
            Ask = "Are you looking for information regarding...",
            AnswerA = "Nautical",
            AnswerB = "Engineering",
        },
    };
}
